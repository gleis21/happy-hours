<div class="container-fluid">
  <div class="row">
    <div class="col-sm-4">
      <ul class="list-group">
        {{#each authorisedUsers}}
        <li class="list-group-item"><a href="/hours/alltimerecords/{{this.email}}">{{this.name}}</a></li>
        {{/each}}
      </ul>
    </div>
    <div class="col-sm-8">
      {{#each timerecords}}
              <div class="card card-block">
                <div class="table-responsive">
                  <table class="table table-striped">
                    <thead class="thead-inverse">
                      <tr>
                        <th>Bewohner*in</th>
                        <th>Dauer</th>
                        <th>Kategorie</th>
                        <th>AG</th>
                        <th>Beschreibung</th>
                        <th>Jahr</th>
                        <th>Monat</th>
                        <th>Tag</th>
                      </tr>
                    </thead>
                    <tbody>
                      {{#each this.records}}
                      <tr>
                        <td>{{this.userName}}</td>
                        <td>{{this.duration}}</td>
                        <td>{{this.category}}</td>
                        <td>{{this.workingGroup}}</td>
                        <td>{{this.description}}</td>
                        <td>{{this.year}}</td>
                        <td>{{this.month}}</td>
                        <td>{{this.day}}</td>
                      </tr>
                      {{/each}}
                    </tbody>
                  </table>
                </div>
              </div>
              {{/each}}
    </div>
  </div>
</div>






























{{#each timeRecords}}
<div class="card card-block">
  <div class="alert alert-success" role="alert">
    <strong>Wow!</strong> Du hast in dem Monat ganze <strong>{{this.durationSum}}</strong> Stunden gemacht!
  </div>
  <br/>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead class="thead-inverse">
        <tr>
          <th>Bewohner*in</th>
          <th>Dauer</th>
          <th>Kategorie</th>
          <th>AG</th>
          <th>Beschreibung</th>
          <th>Jahr</th>
          <th>Monat</th>
          <th>Tag</th>
        </tr>
      </thead>
      <tbody>
        {{#each this.records}}
        <tr>
          <td>{{this.userName}}</td>
          <td>{{this.duration}}</td>
          <td>{{this.category}}</td>
          <td>{{this.workingGroup}}</td>
          <td>{{this.description}}</td>
          <td>{{this.year}}</td>
          <td>{{this.month}}</td>
          <td>{{this.day}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
{{/each}}

</div>
</div>
</div>